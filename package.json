{
  "name": "zen-convert",
  "version": "1.0.0",
  "description": "Desktop media conversion tool - images, videos, YouTube downloads",
  "main": "dist-electron/main/index.js",
  "author": "ZenConvert Team",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:mac": "npm run build && electron-builder --mac",
    "package:linux": "npm run build && electron-builder --linux",
    "test:unit": "vitest",
    "test:component": "vitest --config vitest.component.config.ts",
    "test:e2e": "playwright test",
    "test:coverage": "vitest --coverage",
    "test": "npm run test:unit && npm run test:e2e",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\" \"tests/**/*.{ts,tsx}\"",
    "check-licenses": "license-checker --production --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC;0BSD'",
    "clean": "rimraf dist-electron coverage .playwright"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "clsx": "^2.1.0",
    "electron": "^28.3.3",
    "electron-store": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "lucide-react": "^0.562.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "sharp": "^0.34.5",
    "tailwind-merge": "^2.2.0",
    "youtube-dl-exec": "^3.0.29",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.2",
    "@playwright/test": "^1.40.1",
    "@tailwindcss/postcss": "^4.1.18",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "electron-builder": "^24.9.1",
    "electron-vite": "^2.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jsdom": "^24.0.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.40.1",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "rimraf": "^5.0.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.1"
  }
}
